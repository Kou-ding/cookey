<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Εικόνα + Κουμπιά -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <!-- Εικόνα Συνταγής -->
        <ImageView
            android:id="@+id/recipe_image"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_home_black_24dp"/>

            <!-- Κουμπιά (Edit/Favorite) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btn_favorite"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="@drawable/radio_bg"
                    android:elevation="4dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/favorite_24px" />

                <ImageButton
                    android:id="@+id/btn_edit"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/radio_bg"
                    android:elevation="4dp"
                    android:src="@drawable/edit_24px" />
            </LinearLayout>
        </RelativeLayout>


        <!-- Ονομασία -->
        <TextView
            android:id="@+id/recipe_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Mousakas"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Ετικέτες (Tags) -->
        <TextView
            android:id="@+id/recipe_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:text="Παραδοσιακό, Χορταστικό" />

        <!-- Χώρα & Χρόνος Ποσότητα -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Χώρα (με εικονίδιο) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/flag_24px"/>

                <ImageView
                    android:id="@+id/recipe_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/gr"/>
        </LinearLayout>

        <!-- Χρόνος -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/timer_24px"/>

            <TextView
                android:id="@+id/recipe_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="60λ" />
        </LinearLayout>

            <!-- Ποσότητα -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/restaurant_24px" />

                <TextView
                    android:id="@+id/recipe_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="4" />
            </LinearLayout>
        </LinearLayout>

        <!-- Γραμμή Διαχωρισμού -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#3C3737" />

    <!-- Κουμπιά Συστατικά/Εκτέλεση -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_ingredients"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Συστατικά"
            android:textAllCaps="false"
            android:layout_marginEnd="16dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_steps"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Εκτέλεση"
            android:textAllCaps="false"
            android:layout_marginEnd="16dp"
            android:textSize="16sp" />
    </LinearLayout>

        <!-- Περιεχόμενο (Συστατικά ή Βήματα) -->
        <FrameLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <!-- Συστατικά (εμφανίζεται αρχικά) -->
            <LinearLayout
                android:id="@+id/ingredients_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ingredients_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Βήματα (κρυμμένο αρχικά) -->
            <LinearLayout
                android:id="@+id/steps_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/steps_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</ScrollView>