<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MyShoppingList.MyShoppingListFragment">

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="554dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/scrollViewShoppingList"
        android:layout_width="0dp"
        android:layout_height="554dp"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view">

        <LinearLayout
            android:id="@+id/shoppingListLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Food Section -->
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp" />

            <!-- Dynamic food EditTexts will be added here -->

            <Button
                android:id="@+id/addFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                app:icon="@drawable/add_24dp_e3e3e3_fill0_wght400_grad0_opsz24" />

            <!-- Non-Food Section -->
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Non-Food"
                android:textSize="16sp"
                android:layout_marginTop="32dp"
                android:layout_marginStart="8dp" />

            <Button
                android:id="@+id/addNonFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                app:icon="@drawable/add_24dp_e3e3e3_fill0_wght400_grad0_opsz24" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Buttons -->
    <Button
        android:id="@+id/deleteShoppingList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Delete"
        app:icon="@drawable/delete_24dp_e3e3e3_fill0_wght400_grad0_opsz24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <Button
        android:id="@+id/editShoppingList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:layout_marginTop="16dp"
        app:icon="@drawable/edit_24dp_e3e3e3_fill0_wght400_grad0_opsz24"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintStart_toEndOf="@+id/deleteShoppingList"
        app:layout_constraintEnd_toStartOf="@+id/addToIngredients" />

    <Button
        android:id="@+id/addToIngredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Add"
        app:icon="@drawable/cookie_24dp_e3e3e3_fill0_wght400_grad0_opsz24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

</androidx.constraintlayout.widget.ConstraintLayout>
