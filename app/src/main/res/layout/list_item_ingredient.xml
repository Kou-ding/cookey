<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">
    <TextView
        android:id="@+id/ingredientName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="16sp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/ingredientEditQuantity"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:textSize="14sp"
        android:visibility="gone"
        android:layout_marginEnd="8dp"/>
    <TextView
        android:id="@+id/ingredientQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:visibility="visible"
        android:layout_marginEnd="8dp"/>
    <TextView
        android:id="@+id/ingredientUnitSystem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/ingredientQuantityUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginEnd="8dp"
        android:visibility="visible"/>

    <ImageButton
        android:id="@+id/deleteIngredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="Del"
        android:visibility="gone"
        app:srcCompat="@drawable/delete_24dp_e3e3e3_fill0_wght400_grad0_opsz24" />
</LinearLayout>